/* Nodes to build on */
def labels = ['master']

/* maps for parallel */
def builders = [:]
def stepsForParallel = [:]

/* function to transform a string into a step */
def transformIntoStep(device, nodeName) {
    return {
        node(nodeName) {
            dir(path: '/home/vache/android/repos/cr') {
                sh """#!/bin/bash
. ./build/envsetup.sh
lunch lineage_$device-userdebug"""
            }
        }
    }
}

pipeline {
    agent none

    stages {
        stage('Sync') {
            steps {
                script {
                    for (int i = 0; i < labels.size(); i++) {
                        def label = labels.get(i)
                        def nodePath = labelsPath.get(i);

                        builders[label] = {
                            node(label) {
                                dir(path: ${nodePath}) {
                                    //sh 'repo sync -j48 -cdf --force-sync'
                                    sh 'echo syncing..'
                                }
                            }
                        }
                    }

                    parallel builders
                }
            }
        }
        stage('Build') {
            agent any

            steps {
                script {
                    for (int i = 0; i < devices.size(); i++) {
                        def device = devices.get(i)
                        def stepName = "${device.name}"

                        stepsForParallel[stepName] = transformIntoStep(device.name, device.node)
                    }

                    parallel stepsForParallel
                }
            }
        }
    }
}
