/* maps for parallel */
def builders = [:]
def stepsForParallel = [:]

/* function to transform a string into a step */
def transformIntoStep(device, myNode) {
    return {
        node(myNode.name) {
            dir(path: myNode.workingDir) {
                sh """#!/bin/bash
. ./build/envsetup.sh
lunch lineage_$device-userdebug"""
            }
        }
    }
}

def GetCurrentDay() {
    date = new Date()
    day = date[Calendar.DAY_OF_MONTH]
    return day
}

pipeline {
    agent none

    stages {
        stage('Sync') {
            steps {
                script {
                    for (int i = 0; i < myNodes.size(); i++) {
                        def label = myNodes.get(i)

                        builders[label.name] = {
                            node(label.name) {
                                dir(path: label.name) {
                                    //sh 'repo sync -j48 -cdf --force-sync'
                                    sh 'echo syncing..'
                                }
                            }
                        }
                    }

                    parallel builders
                }
            }
        }
        stage('Build') {
            agent any

            steps {
                script {
                    for (int i = 0; i < devices.size(); i++) {
                        def device = devices.get(i)
                        def stepName = "${device.name}"

                        if (GetCurrentDay() == device.buildDay) {
                            stepsForParallel[stepName] = transformIntoStep(device.name, device.node)
                        }
                    }

                    parallel stepsForParallel
                }
            }
        }
    }
}
